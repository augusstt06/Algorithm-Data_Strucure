{
  //  내가 빌드 할  명령어 들을 파일로 저장
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      //   type : 명령어의 종류 => shell type 명령어
      "label": "C bulid for clang",
      //   label : 명령어의 이름
      "command": "clang",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "C++ bulid for clang++",
      "command": "clang++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "presentation": {
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "execute",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "group": "test",
      "presentation": {
        "clear": true
      }
    }
  ]
}
